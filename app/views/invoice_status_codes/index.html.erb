<p id="notice"><%= notice %></p>

<h1>Invoice Status Codes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_status_codes.each do |invoice_status_code| %>
      <tr>
        <td><%= invoice_status_code.name %></td>
        <td><%= invoice_status_code.description %></td>
        <td><%= link_to 'Show', invoice_status_code %></td>
        <td><%= link_to 'Edit', edit_invoice_status_code_path(invoice_status_code) %></td>
        <td><%= link_to 'Destroy', invoice_status_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

