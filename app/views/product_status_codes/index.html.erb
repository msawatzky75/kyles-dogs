<p id="notice"><%= notice %></p>

<h1>Product Status Codes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_status_codes.each do |product_status_code| %>
      <tr>
        <td><%= product_status_code.name %></td>
        <td><%= product_status_code.description %></td>
        <td><%= link_to 'Show', product_status_code %></td>
        <td><%= link_to 'Edit', edit_product_status_code_path(product_status_code) %></td>
        <td><%= link_to 'Destroy', product_status_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

